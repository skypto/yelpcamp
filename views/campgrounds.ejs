<% include partials/header %>

<div class="container"> <!-- container creates spacing on the sides-->
<header class="jumbotron"> 
    <div class="container">
        <h1>Welcome to YelpCamp!</h1>
        <p>View our hand-picked campgrounds from all over the world</p>
        <p>
           <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campgrounds</a>
           <a class="btn btn-primary btn-lg" href="/">Return to Home page</a>
        </p>
    </div>
</header>

    <div class="row text-center" style="display:flex; flex-wrap:wrap;">
  
        <!-- loop through the array of items and display the names and images -->
        <% campgrounds.forEach(function(campground){ %>
        <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                <img src="<%=campground.image%>" alt="">
                    <div class="caption">
                    <h4><%= campground.name%></h4>
                    </div>
                </div>  
        </div>
        <% }) %>

    </div> 

</div>

<% include partials/footer %>