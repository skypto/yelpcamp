<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align:center;">Edit Comment</h1>
        <div style="width:30%; margin:25px auto;">  <!-- this will let the form take 30% of the container -->
            <form action="/campgrounds/<%=campground_id%>/comments/<%=comment._id%>?_method=PUT" method="POST">
                <div class="form-group">  <!-- put every component in a form group to give spacing -->
                    <input class="form-control" type="text" name="comment[text]" value="<%=comment.text%>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button> <!-- block makes button full length of container -->
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>       
    </div>
</div>
<% include ../partials/footer %>